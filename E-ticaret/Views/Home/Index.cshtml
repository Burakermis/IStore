@using E_ticaret.Models;
@model IEnumerable<E_ticaret.Models.ProductModel>

@{
    ViewBag.Title = "Index";
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block" src="https://www.stuff.com.tr/v1/wp-content/uploads/2017/08/okula-donus-apple.jpg" width="100%" height="500" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block" src="https://cdn.webrazzi.com/uploads/2022/01/has-581.png" width="100%" height="500" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block" src="~/theme/img/kreditaksit.jpg" width="100%" height="500" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
