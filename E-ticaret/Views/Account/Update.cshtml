@model E_ticaret.Models.Register

<div class="container" pb-5>
    <h2>Kişi Bilgilerini Güncelle</h2>
    <hr />
    <form method="post">
        <div class="container">
            <br />
            <div class="form-group">
                <label>Kullanıcı Adı</label>
                <ınput typeof="text" name="UserName" value="@Model.UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Ad</label>
                <ınput typeof="text" name="Name" value="@Model.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>Soyad</label>
                <ınput typeof="text" name="SurName" value="@Model.SurName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Mail adresi</label>
                <ınput typeof="text" name="Email" value="@Model.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label>Şifre</label>
                <ınput typeof="text" name="Password" value="@Model.Password" class="form-control" />
            </div>
            <div class="form-group">
                <label>Şifre Tekrarı</label>
                <ınput typeof="text" name="RePassword" value="@Model.RePassword" class="form-control" />
            </div>
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>
    </form>
</div>
