
@model E_ticaret.Models.Cart
@{
    ViewBag.Title = "Index";
}

<div class="container pb-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Alışveriş Sepeti</h2>
            <hr />

            @if (Model.CartLines.Count > 0)
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Adet</th>
                            <th>Ürün İsmi</th>
                            <th>Fiyat</th>
                            <th>Ara Toplam</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartLines)
                        {
                            <tr>
                                <td>
                                    <img src="~/Upload/@item.Product.Image" width="50" />
                                </td>
                                <td>
                                    @item.Quantity
                                </td>
                                <td>
                                    <a href="/Home/Details/@item.Product.Id">@item.Product.Name</a>
                                </td>
                                <td>
                                    @item.Product.Price
                                    <i class="fa fa-try" aria-hidden="true"></i>
                                </td>
                                <td>
                                    @((item.Product.Price * item.Quantity).ToString("c"))
                                </td>
                                <td>
                                    @using (Html.BeginForm("RemoveFromCart", "Cart"))
                                    {
                                        @Html.Hidden("Id", item.Product.Id)
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                                            Sil
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="4"></td>
                            <td>
                                @Model.Total().ToString("c")
                            </td>
                        </tr>
                    </tfoot>
                </table>
                <div class="text-center">
                    @using (Html.BeginForm("CartClear", "Cart"))
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                            Sepeti Temizle
                        </button>
                    }
                </div>           
                <div class="text-center">
                    <a href="/Home/List" class="btn btn-primary">
                        <i class="fa fa-angle-left" aria-hidden="true"></i>
                        Alışverişe Devam Et
                    </a>
                    <a href="/Cart/Checkout" class="btn btn-success">
                        Alışverişi Tamamla
                        <i class="fa fa-check" aria-hidden="true"></i>
                    </a>
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                    Alışveriş sepetinizde ürün bulunmamaktadır.
                </div>
            }
        </div>
    </div>
</div>